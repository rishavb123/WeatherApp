<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bolas"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_zip"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/black"
        android:ems="10"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/weather_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_zip"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/weather_stuff"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black"
        android:text="Enter a Zip Code"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/weather_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_image"
        app:layout_constraintTop_toBottomOf="@+id/edit_zip"
        tools:text="Enter a Zip Code" />

    <ListView
        android:id="@+id/weather_list"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_stuff"
        app:layout_constraintVertical_bias="0.523">

    </ListView>

    <ImageView
        android:id="@+id/bottom_image_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="7dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottom_image_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_textView_1"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/bottom_image_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottom_image_3"
        app:layout_constraintStart_toEndOf="@+id/bottom_image_1"
        app:layout_constraintTop_toBottomOf="@+id/bottom_textView_1"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/bottom_image_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottom_image_4"
        app:layout_constraintStart_toEndOf="@+id/bottom_image_2"
        app:layout_constraintTop_toBottomOf="@+id/bottom_textView_3"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/bottom_image_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bottom_image_5"
        app:layout_constraintStart_toEndOf="@+id/bottom_image_3"
        app:layout_constraintTop_toBottomOf="@+id/bottom_textView_4"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/bottom_image_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottom_image_4"
        app:layout_constraintTop_toBottomOf="@+id/bottom_textView_5"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/bottom_textView_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="Enter a Zip Code"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/bottom_image_5"
        app:layout_constraintEnd_toStartOf="@+id/bottom_textView_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_list"
        tools:text="Enter a Zip Code" />

    <TextView
        android:id="@+id/bottom_textView_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:text="Enter a Zip Code"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/bottom_image_2"
        app:layout_constraintEnd_toStartOf="@+id/bottom_textView_3"
        app:layout_constraintStart_toEndOf="@+id/bottom_textView_1"
        app:layout_constraintTop_toBottomOf="@+id/weather_list"
        tools:text="Enter a Zip Code" />

    <TextView
        android:id="@+id/bottom_textView_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@android:color/black"
        android:text="Enter a Zip Code"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/bottom_image_3"
        app:layout_constraintEnd_toStartOf="@+id/bottom_textView_4"
        app:layout_constraintStart_toEndOf="@+id/bottom_textView_2"
        app:layout_constraintTop_toBottomOf="@+id/weather_list"
        tools:text="Enter a Zip Code" />

    <TextView
        android:id="@+id/bottom_textView_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@android:color/black"
        android:text="Enter a Zip Code"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/bottom_image_4"
        app:layout_constraintEnd_toStartOf="@+id/bottom_textView_5"
        app:layout_constraintStart_toEndOf="@+id/bottom_textView_3"
        app:layout_constraintTop_toBottomOf="@+id/weather_list"
        tools:text="Enter a Zip Code" />

    <TextView
        android:id="@+id/bottom_textView_5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@android:color/black"
        android:text="Enter a Zip Code"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        app:layout_constraintBottom_toTopOf="@+id/bottom_image_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottom_textView_4"
        app:layout_constraintTop_toBottomOf="@+id/weather_list"
        tools:text="Enter a Zip Code" />

    <TextView
        android:id="@+id/location"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/black"
        android:text="Enter a Zip Code"
        android:textAlignment="center"
        android:textColor="@android:color/holo_green_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/weather_list"
        app:layout_constraintEnd_toStartOf="@+id/main_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_zip"
        tools:text="Enter a Zip Code" />

</android.support.constraint.ConstraintLayout>